          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/citas/reportes/mascotas-por-especie"
          }
        },
        {
          "name": "Veterinarios con más citas atendidas",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/citas/reportes/veterinarios-top"
          }
        }
      ]
